<Window x:Class="HusqvarnaTest.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HusqvarnaTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox ItemsSource="{Binding Companies}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock>
                            <Run Text="Name: "/>
                            <Run Text="{Binding Name}"/>
                        </TextBlock>

                        <TextBlock>
                            <Run Text="Organization number: "/>
                            <Run Text="{Binding OrganizationNumber}"/>
                        </TextBlock>

                        <TextBlock>
                            <Run Text="Employees: "/>
                            <Run Text="{Binding Employees}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
